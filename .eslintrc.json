{
  "env": {
    "browser": true,
    "node": true
  },

  "globals": {},

  "rules": {
    "quotes": 0,
    "radix": 2,
    "indent": [2, 2],
    "camelcase": 2,
    "no-underscore-dangle": 0,
    "new-cap": [2, {}],
    "strict": [2, "global"],
    "keyword-spacing": 2,
    "space-before-function-paren": 2,
    "no-irregular-whitespace": 2,
    "no-shadow": 2
  },

  "ecmaFeatures": {
    "arrowFunctions": true,
    "classes": true,
    "templateStrings": true
  }
}
